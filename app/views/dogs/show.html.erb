<section>
  <h2><%= @dog.name %></h2>

  <div id="demo" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @dog.images.each_with_index do |slide, i| %>
      <div class="carousel-item <%= i == 0 ? 'active' : '' %>">
        <%= image_tag url_for(slide), alt: "Photo of #{@dog.name}" %>
      </div>
      <% end %>
    </div>
  </div>

  <p><%= @dog.description %></p>
  <%= link_to "Edit #{@dog.name}'s Profile", edit_dog_path %>
  <br>
  <%= link_to "Delete #{@dog.name}'s Profile", dog_path, method: :delete, data: { confirm: 'Are you sure?' } %>
</section>

<script>
  $(document).ready(function() {
    $('#demo').carousel();
  });
</script>